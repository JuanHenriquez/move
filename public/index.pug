doctype html
html(lang="en", ng-app="moveApp")

    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        title Move
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")
        link(rel="stylesheet", href="libs/angular-material/angular-material.min.css")
        link(rel="stylesheet", href="libs/Materialize/dist/css/materialize.min.css")
        link(rel="stylesheet", href="css/style.css")

    body(ng-cloak, ng-controller="AppController", layout="row")

        // Sidenav where the user can move around the app.
        md-sidenav.md-sidenav-left.md-whiteframe-z2(layout="column", md-component-id="left", md-is-locked-open="$mdMedia('gt-md')", flex="25")
            md-toolbar.md-tall.md-hue-1.inset(layout="row", layout-padding, layout-align="center center")
                // User picture.
                img#nav-user-img(src="./img/perfil.png", flex)
                // User information (name and email).
                #nav-user-info(layout="column", flex)
                    span#nav-user-info-title.md-title {{ username }}
                    span#nav-user-info-email.md-subhead {{ userEmail }}



        script(src="libs/angular/angular.min.js")
        script(src="libs/jquery/dist/jquery.min.js")
        script(src="libs/angular-animate/angular-animate.min.js")
        script(src="libs/angular-aria/angular-aria.min.js")
        script(src="libs/angular-messages/angular-messages.min.js")
        script(src="libs/angular-material/angular-material.min.js")
        script(src="libs/Materialize/dist/js/materialize.min.js")
        script(src="libs/Parallax-ImageScroll/jquery.imageScroll.min.js")
        script(src="app/app.js")

        script.
            $('.mainImg').imageScroll();
